<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:atomex.CustomElements"
             x:Class="atomex.UnlockWalletPage"
             Title="Unlock wallet"
             BackgroundColor="#dae4e5">
    <RelativeLayout>
        <ActivityIndicator x:Name="Loader"
                           RelativeLayout.XConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Width, Factor = .5}"
	             	       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor =.5}"
                           Scale="3"
                           Color="Black"
                           IsRunning="False"/>
        <StackLayout x:Name="Content"
                     Padding="30"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}">
            <ImageButton Source="Login"
                         BackgroundColor="LightCyan"
                         BorderColor="#2b4a4a"
                         BorderWidth="3"
                         CornerRadius="90"
                         Padding="30"
                         Margin="0,20"
                         HorizontalOptions="Center"
                         WidthRequest="180"
                         HeightRequest="180"/>
            <Label Text="Please enter your password:"
                   Margin="0,10"/>
            <Frame x:Name="PasswordFrame"
                   Padding="0"
                   HasShadow="False"
                   BorderColor="#69a4a2"
                   CornerRadius="0"
                   HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <Frame HasShadow="False" 
                           BackgroundColor="LightCyan">
                        <Image Source="LockIcon"
                           HeightRequest="24"
                           WidthRequest="24"/>
                    </Frame>
                    <StackLayout HeightRequest="70"
                                 HorizontalOptions="FillAndExpand"
                                 BackgroundColor="White">
                        <Label x:Name="PasswordHint"
                               Padding="20,10,0,0"
                               FontSize="14"
                               VerticalTextAlignment="End"
                               TextColor="CadetBlue"
                               IsVisible="False"/>
                        <controls:CustomEntry x:Name="PasswordEntry"
                                              Placeholder="Password"
                                              Keyboard="Text"
                                              Focused="PasswordEntryFocused"
                                              Unfocused="PasswordEntryFocused"
                                              IsPassword="True"
                                              IsSpellCheckEnabled="False"
                                              IsTextPredictionEnabled="False"
                                              HorizontalOptions="FillAndExpand"
                                              VerticalOptions="FillAndExpand"
                                              TextChanged="OnPasswordTextChanged"/>
                </StackLayout>
                </StackLayout>
            </Frame>
            <Label x:Name="Error"
               TextColor="Red"
               IsVisible="False"
               Margin="0,10"/>
            <Button Text="Unlock"
                    Margin="0,20"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="70"
                    CornerRadius="0"
                    BackgroundColor="#2b4a4a"
                    HorizontalOptions="Fill"
                    Clicked="OnLoginButtonClicked"/>
        </StackLayout>
    </RelativeLayout>
</ContentPage>
