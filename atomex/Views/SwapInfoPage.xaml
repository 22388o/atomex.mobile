<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:atomex.Resources"
             x:Class="atomex.SwapInfoPage"
             Title="{x:Static resources:AppResources.SwapInfoPageTitle}">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form"
                       RowHeight="70">
                <TableRoot>
                    <TableSection Title="{x:Static resources:AppResources.SwapInfoLabel}"
                                  TextColor="{DynamicResource HintTextColor}">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal"
                                         Padding="20,0">
                                <RelativeLayout VerticalOptions="CenterAndExpand"
                                                HorizontalOptions="Start">
                                    <Image Source="{Binding FromCurrencyCode}"
                                           x:Name="FromCurrencyIcon"
                                           HeightRequest="48"
                                           WidthRequest="48"/>
                                    <Image Source="{Binding ToCurrencyCode}"
                                           HeightRequest="48"
                                           WidthRequest="48"
                                           RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView,ElementName=FromCurrencyIcon,Property=Y,Factor=1,Constant=0}"
                                           RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView,ElementName=FromCurrencyIcon,Property=X,Factor=1,Constant=+27}"/>
                                </RelativeLayout>
                                <StackLayout VerticalOptions="CenterAndExpand"
                                             Padding="10,0">
                                    <Label Text="{Binding FromAmount}"
                                           VerticalTextAlignment="Center"
                                           TextColor="Red">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="-"/>
                                                <Span Text="{Binding FromAmount, StringFormat='{0}'}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding FromCurrencyCode}"/>
                                             </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Text="{Binding ToAmount}"
                                           VerticalTextAlignment="Center"
                                           TextColor="Green">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="+"/>
                                                <Span Text="{Binding ToAmount, StringFormat='{0}'}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding ToCurrencyCode}"/>
                                             </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{x:Static resources:AppResources.State}"
                                       Margin="15,0,0,0"
                                       VerticalTextAlignment="Center"
                                       FontSize="18"/>
                                <Frame CornerRadius="8"
                                       Padding="0"
                                       Margin="20"
                                       HasShadow="False">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding CompactState}"
                                                     Value="Completed">
                                            <Setter Property="BackgroundColor"
                                                    Value="{DynamicResource ComletedStateColor}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding CompactState}"
                                                     Value="InProgress">
                                            <Setter Property="BackgroundColor"
                                                    Value="{DynamicResource InProgressStateColor}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding CompactState}"
                                                     Value="Canceled">
                                            <Setter Property="BackgroundColor"
                                                    Value="{DynamicResource CanceledStateColor}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding CompactState}"
                                                     Value="Refunded">
                                            <Setter Property="BackgroundColor"
                                                    Value="{DynamicResource RefundedStateColor}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding CompactState}"
                                                     Value="Unsettled">
                                            <Setter Property="BackgroundColor"
                                                    Value="{DynamicResource UnsettledStateColor}"/>
                                        </DataTrigger>
                                    </Frame.Triggers>
                                    <Label Padding="10"
                                           FontSize="14"
                                           TextColor="White"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center"
                                           BackgroundColor="Transparent"
                                           FontFamily="{DynamicResource BoldFont}"
                                           Text="{Binding CompactState}" />
                                </Frame>
                            </StackLayout>
                        </ViewCell>
                        <TextCell Text="{x:Static resources:AppResources.Price}"
                                  Detail="{Binding Price}"
                                  DetailColor="Gray"/>
                        <TextCell Text="{x:Static resources:AppResources.TransactionTime}"
                                  Detail="{Binding Time, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                  DetailColor="Gray"/>
                    </TableSection>
                </TableRoot>
            </TableView>       
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
