<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.SendPage"
             xmlns:controls="clr-namespace:atomex.CustomElements"
             Title="Send"
             BackgroundColor="#f0f0f0">
    <ContentPage.Content>
        <StackLayout Margin="0,20,0,0">
            <!--<Frame HasShadow="False" CornerRadius="0" Margin="0,10">
                <controls:CustomEntry Placeholder="Address" HeightRequest="30"></controls:CustomEntry>
            </Frame>
            <Frame HasShadow="True" CornerRadius="0" Focused="">
                <controls:CustomEntry Placeholder="Amount" Keyboard="Numeric" HeightRequest="30" Focused="EntryFocused"></controls:CustomEntry>
            </Frame>-->
            <Grid ColumnSpacing="0"
                  RowSpacing="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <controls:CustomEntry x:Name="Address"
                                      Placeholder="Address"
                                      Keyboard="Text"
                                      Focused="EntryFocused"
                                      IsSpellCheckEnabled="False"
                                      IsTextPredictionEnabled="False" />
                <Button Grid.Column="1"
                        Text="Paste"
                        FontSize="16"
                        BackgroundColor="White"
                        Clicked="OnPasteButtonClicked" />
                <ImageButton Grid.Column="2"
                           Source="ScanIcon"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand"
                           BackgroundColor="White"
                           Clicked="OnScanButtonClicked"
                           Padding="20,0"/>
                <controls:CustomEntry Grid.Row="1"
                        x:Name="Amount"
                        Placeholder="Amount"
                        Keyboard="Numeric"
                        Focused="EntryFocused"
                        IsSpellCheckEnabled="False"
                        IsTextPredictionEnabled="False" />
                <Button Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Text="MAX"
                        FontSize="16"
                        HorizontalOptions="Fill"
                        BackgroundColor="White"
                        Clicked="OnSetMaxAmountButtonClicked"/>
            </Grid>
            <Button Text="NEXT"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="70"
                    BackgroundColor="CadetBlue"
                    CornerRadius="3"
                    HorizontalOptions="Fill"
                    VerticalOptions="EndAndExpand"
                    Clicked="OnNextButtonClicked" />
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>
