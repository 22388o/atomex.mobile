<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.SendPage"
             xmlns:controls="clr-namespace:atomex.CustomElements"
             Title="Send"
             BackgroundColor="#f0f0f0">
    <ContentPage.Content>
        <StackLayout Margin="0,20,0,0">
            <Grid ColumnSpacing="0"
                  RowSpacing="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Frame Grid.ColumnSpan="3"
                       x:Name="AddressFrame"
                       Padding="5"
                       HasShadow="False">
                    <StackLayout Orientation="Horizontal"
                                 Grid.ColumnSpan="3">
                        <controls:CustomEntry x:Name="Address"
                                              Placeholder="Address"
                                              Keyboard="Text"
                                              Focused="AddressEntryFocused"
                                              Unfocused="AddressEntryUnfocused"
                                              IsSpellCheckEnabled="False"
                                              IsTextPredictionEnabled="False"
                                              HorizontalOptions="FillAndExpand"/>
                        <Button Grid.Column="1"
                                Text="Paste"
                                FontSize="16"
                                BackgroundColor="White"
                                Clicked="OnPasteButtonClicked"
                                HorizontalOptions="End"/>
                        <ImageButton Grid.Column="2"
                                     Source="ScanIcon"
                                     HorizontalOptions="End"
                                     BackgroundColor="White"
                                     Clicked="OnScanButtonClicked"
                                     Padding="10,10,20,10"/>
                    </StackLayout>
                </Frame>
                <Frame Grid.Row="1"
                       Grid.ColumnSpan="3"
                       x:Name="InvalidAddressFrame"
                       HasShadow="False"
                       IsVisible="False"
                       Padding="5">
                    <Label Text="Invalid address"
                           TextColor="Red"
                           Margin="20"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Start"/>
                </Frame>
                <Frame Grid.Row="2"
                       Grid.ColumnSpan="3"
                       x:Name="AmountFrame"
                       Padding="5"
                       HasShadow="False">
                    <StackLayout Orientation="Horizontal"
                                 Grid.Row="2"
                                 Grid.ColumnSpan="3">
                        <controls:CustomEntry Grid.Row="2"
                                              Grid.ColumnSpan="2"
                                              x:Name="Amount"
                                              Placeholder="Amount"
                                              Keyboard="Numeric"
                                              Focused="AmountEntryFocused"
                                              Unfocused="AmountEntryUnfocused"
                                              IsSpellCheckEnabled="False"
                                              IsTextPredictionEnabled="False"
                                              HorizontalOptions="FillAndExpand"/>
                        <Button Grid.Row="2"
                                Grid.Column="2"
                                Text="MAX"
                                FontSize="16"
                                Padding="20"
                                HorizontalOptions="End"
                                BackgroundColor="White"
                                Clicked="OnSetMaxAmountButtonClicked"/>
                    </StackLayout>
                </Frame>
                <Frame Grid.Row="3"
                       Grid.ColumnSpan="3"
                       x:Name="InvalidAmountFrame"
                       HasShadow="False"
                       IsVisible="False">
                    <Label Text="Invalid amount"
                           x:Name="InvalidAmountLabel"
                           TextColor="Red"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Start"/>
                </Frame>
            </Grid>
            <Label x:Name="FeeLabel"
                   Margin="10,20"
                   TextColor="Gray"
                   IsVisible="False">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Estimated Fee: "/>
                        <Span x:Name="FeeValue"
                              FontAttributes="Bold"
                              FontSize="16"
                              TextColor="Black"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <StackLayout x:Name="EstimateFeeLayout"
                         VerticalOptions="FillAndExpand"
                         IsVisible="False">
                <ActivityIndicator x:Name="FeeLoader"
                                   HorizontalOptions="Center"
                                   VerticalOptions="CenterAndExpand"
                                   Color="CadetBlue"
                                   Scale="2"/>
                <Label Text="Calculating a fee..."
                       VerticalOptions="StartAndExpand"
                       HorizontalTextAlignment="Center"
                       TextColor="Gray"
                       FontSize="18"/>
            </StackLayout>
            <Button Text="NEXT"
                    x:Name="NextButton"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="70"
                    BackgroundColor="CadetBlue"
                    CornerRadius="0"
                    HorizontalOptions="Fill"
                    VerticalOptions="EndAndExpand"
                    Clicked="OnNextButtonClicked"/>
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>
