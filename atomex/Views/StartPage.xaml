<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.StartPage">
    <StackLayout VerticalOptions="FillAndExpand">
        <ImageButton Source="Logo"
                     CornerRadius="100"
                     WidthRequest="200"
                     HeightRequest="200"
                     BorderColor="#0E3030"
                     BorderWidth="3"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Padding="40"
                     Margin="0,20,0,0"
                     BackgroundColor="LightCyan"/>
        <Label Grid.Row="1"
               Text="atomex"
               FontFamily="{DynamicResource LogoFont}"
               FontSize="36"
               Padding="10"
               TextColor="{DynamicResource LogoTextColor}"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>
        <Label Grid.Row="2"
               Text="Multicurrency HD wallet with built-in hybrid atomic swap exchange"
               FontSize="20"
               Padding="20,0,20,20"
               TextColor="{DynamicResource MainTextColor}"
               FontFamily="{DynamicResource LightFont}"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>
        <StackLayout Grid.Row="4"
                     VerticalOptions="FillAndExpand">
            <Button Text="MY WALLETS"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Margin="20,0"
                    Style="{DynamicResource MainButtonStyle}"
                    Clicked="ShowMyWalletsButtonClicked"/>
            <Button Text="CREATE NEW WALLET"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Margin="20,0"
                    Style="{DynamicResource AdditionalButtonStyle}"
                    Clicked="CreateNewWalletButtonClicked"/>
            <Button Text="RESTORE WALLET"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Margin="20,0"
                    Style="{DynamicResource AdditionalButtonStyle}"
                    Clicked="OnRestoreWalletButtonClicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
