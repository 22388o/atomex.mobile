<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.StartPage">
    <RelativeLayout VerticalOptions="StartAndExpand">
        <StackLayout Orientation="Vertical"
                     VerticalOptions="Start"
                     HorizontalOptions="FillAndExpand"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}">
            <Image Source="StartPage-bg"
                   RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                   RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                   Margin="0"/>
        </StackLayout>
        <StackLayout RelativeLayout.XConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.5, Constant=-140}" 
                     RelativeLayout.YConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.5, Constant=+130}">
            <Button Text="MY WALLETS"
                    WidthRequest="280"
                    Style="{DynamicResource MainButtonStyle}"
                    Clicked="ShowMyWalletsButtonClicked"/>
            <Button Text="CREATE NEW WALLET"
                    Style="{DynamicResource AdditionalButtonStyle}"
                    Clicked="CreateNewWalletButtonClicked"/>
            <Button Text="RESTORE WALLET"
                    Style="{DynamicResource AdditionalButtonStyle}"
                    Clicked="OnRestoreWalletButtonClicked"/>
        </StackLayout>
    </RelativeLayout>
    
</ContentPage>
