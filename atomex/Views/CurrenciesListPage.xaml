<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:atomex.Resources"
             x:Class="atomex.CurrenciesListPage"
             Title="{x:Static resources:AppResources.WalletsPageTitle}"
             BackgroundColor="{DynamicResource MainBackgroundColor}">
    <ContentPage.Content>
        <StackLayout Margin="0,20"
                     VerticalOptions="FillAndExpand">
            <ListView ItemsSource="{Binding CurrencyViewModels}"
                      HasUnevenRows="True"
                      ItemTapped="OnListViewItemTapped"
                      SeparatorVisibility="None"
                      VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.RowSpan="2"
                                       WidthRequest="48"
                                       HeightRequest="48"
                                       Source="{Binding CurrencyCode}"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Currency.Description}"
                                       FontFamily="{DynamicResource RegularFont}"
                                       TextColor="{DynamicResource MainTextColor}"
                                       VerticalOptions="End"/>
                                <Label Grid.Column="2"
                                       Text="{Binding AvailableAmount}"
                                       FontFamily="{DynamicResource RegularFont}"
                                       TextColor="{DynamicResource MainTextColor}"
                                       HorizontalOptions="End"
                                       VerticalOptions="End">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding AvailableAmount, StringFormat='{0:0.#####}'}"
                                                  FontSize="14"/>
                                            <Span Text=" " /> 
                                            <Span Text="{Binding CurrencyCode}"
                                                  FontSize="12"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding Price, StringFormat='{0:f2} $'}"
                                       TextColor="{DynamicResource AdditionalTextColor}"
                                       FontFamily="{DynamicResource LightFont}"
                                       FontSize="12"
                                       VerticalOptions="Start" />
                                <Label Grid.Row="1"
                                       Grid.Column="2"
                                       Text="{Binding AmountInBase, StringFormat='{0:f2} $'}"
                                       FontFamily="{DynamicResource LightFont}"
                                       TextColor="{DynamicResource AdditionalTextColor}"
                                       FontSize="12"
                                       VerticalOptions="Start"
                                       HorizontalOptions="EndAndExpand" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
