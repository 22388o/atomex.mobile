<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:zxcm="clr-namespace:ZXing.Common;assembly=zxing.portable"
             xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             x:Class="atomex.ReceivePage"
             Title="Receive">
    <ScrollView>
        <StackLayout HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Padding="20">
            <!--<zxing:ZXingBarcodeImageView WidthRequest="300" HeightRequest="100" BarcodeValue="1337" BarcodeFormat="CODE_39">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300" Height="100" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>-->
            <zxing:ZXingBarcodeImageView WidthRequest="300"
                                         HeightRequest="300"
                                         BarcodeValue="{Binding FreeExternalAddress}"
                                         BarcodeFormat="QR_CODE"
                                         x:Name="IMG">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300" Height="300" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>
            <Label Text="{Binding FreeExternalAddress}"
                   TextColor="Gray"
                   FontFamily="{DynamicResource RegularFont}"
                   HorizontalTextAlignment="Center"
                   FontSize="24"/>
             <Grid RowSpacing="0"
                   ColumnSpacing="50"
                   Margin="0,40">
                 <Grid.RowDefinitions>
                     <RowDefinition Height="*" />
                     <RowDefinition Height="*" />
                 </Grid.RowDefinitions>
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="5*" />
                     <ColumnDefinition Width="5*" />
                 </Grid.ColumnDefinitions>
                 <StackLayout>
                     <StackLayout.GestureRecognizers>
                         <TapGestureRecognizer Tapped="OnCopyButtonClicked"/>
                     </StackLayout.GestureRecognizers>
                     <ffimageloadingsvg:SvgCachedImage Grid.Column="0"
                                                       WidthRequest="40"
                                                       HeightRequest="40"
                                                       HorizontalOptions="End"
                                                       VerticalOptions="Center"
                                                       Source="Copy.svg"/>
                 </StackLayout>
                 <StackLayout Grid.Column="1">
                     <StackLayout.GestureRecognizers>
                         <TapGestureRecognizer Tapped="OnShareButtonClicked"/>
                     </StackLayout.GestureRecognizers>
                     <ffimageloadingsvg:SvgCachedImage Grid.Column="0"
                                                       WidthRequest="40"
                                                       HeightRequest="40"
                                                       HorizontalOptions="Start"
                                                       VerticalOptions="Center"
                                                       Source="Share.svg"/>
                 </StackLayout>
                 <Label Grid.Row="1"
                        Text="Copy"
                        FontFamily="{DynamicResource RegularFont}"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />
                 <Label Grid.Row="1"
                        Grid.Column="1"
                        Text="Share"
                        FontFamily="{DynamicResource RegularFont}"
                        HorizontalOptions="Start"
                        VerticalOptions="Center" />
             </Grid>
            <!--<zxing:ZXingBarcodeImageView WidthRequest="300" HeightRequest="100" BarcodeValue="1337133713378" BarcodeFormat="EAN_13">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300" Height="100" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>-->
        </StackLayout>
    </ScrollView>
</ContentPage>