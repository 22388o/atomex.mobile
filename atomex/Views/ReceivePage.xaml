<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:zxcm="clr-namespace:ZXing.Common;assembly=zxing.portable"
             xmlns:resources="clr-namespace:atomex.Resources"
             x:Class="atomex.ReceivePage"
             Title="{x:Static resources:AppResources.ReceivePageTitle}">
    <ScrollView>
        <StackLayout HorizontalOptions="Center"
                     Padding="20">
            <StackLayout Orientation="Horizontal"
                         Spacing="0"
                         HeightRequest="70">
                <Grid VerticalOptions="Fill"
                      HorizontalOptions="Fill"
                      RowSpacing="0"
                      ColumnSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="35" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Frame Grid.RowSpan="2"
                           Padding="5"
                           Style="{DynamicResource FrameCaptionStyle}">
                        <Label Text="{x:Static resources:AppResources.AddressLabel}"
                               Style="{DynamicResource LabelFrameCaptionStyle}"/>
                    </Frame>
                    <Frame Grid.RowSpan="2"
                           Grid.ColumnSpan="2"
                           Grid.Column="1"
                           HasShadow="False"
                           BorderColor="LightGray"
                           x:Name="AddressFrame"
                           Padding="0">
                        <Picker ItemsSource="{Binding FromAddressList}"
                                ItemDisplayBinding="{Binding DisplayAddressWithBalance}"
                                SelectedItem="{Binding SelectedAddress}"
                                x:Name="AddressPicker"
                                Focused="OnPickerFocused"
                                Unfocused="OnPickerFocused"
                                TextColor="#ffffff"/>
                    </Frame>
                    <Label Grid.Column="1"
                           Text="{Binding SelectedAddress.Address}"
                           FontFamily="{DynamicResource RegularFont}"
                           LineBreakMode="MiddleTruncation"
                           Padding="20,0,0,0"
                           VerticalTextAlignment="End"
                           IsEnabled="False"/>
                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Padding="20,0,0,0"
                           HorizontalTextAlignment="End"
                           VerticalTextAlignment="Center"
                           FontFamily="{DynamicResource ItalicFont}"
                           TextColor="{DynamicResource HintTextColor}"
                           IsEnabled="False">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{x:Static resources:AppResources.Balance}"/>
                                <Span Text=" "/>
                                <Span Text="{Binding SelectedAddress.AvailableBalance, StringFormat='{0:0.#########}'}"/>
                                <Span Text=" "/>
                                <Span Text="{Binding SelectedAddress.WalletAddress.Currency}"/>
                        </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Image Source="DownArrow-picker"
                           Grid.RowSpan="2"
                           Grid.Column="2"
                           WidthRequest="10"
                           HeightRequest="10"
                           Margin="0,30"/>
                </Grid>
            </StackLayout>
            <!--<zxing:ZXingBarcodeImageView WidthRequest="300" HeightRequest="100" BarcodeValue="1337" BarcodeFormat="CODE_39">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300" Height="100" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>-->
            <zxing:ZXingBarcodeImageView WidthRequest="300"
                                         HeightRequest="300"
                                         BarcodeValue="{Binding SelectedAddress.Address}"
                                         BarcodeFormat="QR_CODE">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300"
                                          Height="300" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>
            <Label Text="{Binding SelectedAddress.Address}"
                   TextColor="Gray"
                   FontFamily="{DynamicResource RegularFont}"
                   HorizontalTextAlignment="Center"
                   FontSize="24"/>
            <Grid RowSpacing="0"
                  ColumnSpacing="50"
                  Margin="0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <StackLayout>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCopyButtonClicked"/>
                    </StackLayout.GestureRecognizers>
                    <Image WidthRequest="40"
                           HeightRequest="40"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Source="Copy"/>
                </StackLayout>
                <StackLayout Grid.Column="1">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnShareButtonClicked"/>
                    </StackLayout.GestureRecognizers>
                    <Image Grid.Column="0"
                           WidthRequest="40"
                           HeightRequest="40"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           Source="Share"/>
                </StackLayout>
                <Label Grid.Row="1"
                       Text="{x:Static resources:AppResources.CopyButton}"
                       FontFamily="{DynamicResource RegularFont}"
                       HorizontalOptions="End"
                       VerticalOptions="Center" />
                <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="{x:Static resources:AppResources.ShareButton}"
                       FontFamily="{DynamicResource RegularFont}"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />
            </Grid>
            <!--<zxing:ZXingBarcodeImageView WidthRequest="300" HeightRequest="100" BarcodeValue="1337133713378" BarcodeFormat="EAN_13">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300" Height="100" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>-->
        </StackLayout>
    </ScrollView>
</ContentPage>