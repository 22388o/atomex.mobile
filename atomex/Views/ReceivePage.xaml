<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:zxcm="clr-namespace:ZXing.Common;assembly=zxing.portable"
             xmlns:resources="clr-namespace:atomex.Resources"
             xmlns:custom="clr-namespace:atomex.CustomElements"
             x:Class="atomex.ReceivePage"
             Title="{x:Static resources:AppResources.ReceivePageTitle}"
             BackgroundColor="{DynamicResource MainBackgroundColor}">
    <ScrollView>
        <StackLayout HorizontalOptions="Center"
                     Padding="20">
            <StackLayout Orientation="Horizontal"
                         Spacing="0"
                         HeightRequest="70">
                <Grid VerticalOptions="Fill"
                      HorizontalOptions="Fill"
                      RowSpacing="0"
                      ColumnSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="35" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Frame Grid.RowSpan="2"
                           Padding="5"
                           Style="{DynamicResource FrameCaptionStyle}">
                        <Label Text="{x:Static resources:AppResources.AddressLabel}"
                               Style="{DynamicResource LabelFrameCaptionStyle}"/>
                    </Frame>
                    <Frame Grid.RowSpan="2"
                           Grid.ColumnSpan="2"
                           Grid.Column="1"
                           HasShadow="False"
                           BorderColor="LightGray"
                           x:Name="AddressFrame"
                           Padding="0">
                        <custom:CustomPicker ItemsSource="{Binding FromAddressList}"
                                             ItemDisplayBinding="{Binding DisplayAddressWithBalance}"
                                             SelectedItem="{Binding SelectedAddress, Mode=TwoWay}"
                                             x:Name="AddressPicker"
                                             Focused="OnPickerFocused"
                                             Unfocused="OnPickerFocused"
                                             TextColor="Transparent"/>
                    </Frame>
                    <Label Grid.Column="1"
                           Text="{Binding SelectedAddress.Address}"
                           FontFamily="{DynamicResource RegularFont}"
                           LineBreakMode="MiddleTruncation"
                           Padding="10,0,0,0"
                           HorizontalTextAlignment="End"
                           VerticalTextAlignment="End">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPickerClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Padding="10,0,0,0"
                           Style="{DynamicResource PickerBalanceLabelStyle}"
                           HorizontalTextAlignment="End"
                           VerticalTextAlignment="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPickerClicked"/>
                        </Label.GestureRecognizers>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{x:Static resources:AppResources.Balance}"/>
                                <Span Text=" "/>
                                <Span Text="{Binding SelectedAddress.AvailableBalance, StringFormat='{0:0.#########}'}"/>
                                <Span Text=" "/>
                                <Span Text="{Binding SelectedAddress.WalletAddress.Currency}"/>
                        </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Image Source="DownArrowPicker"
                           Grid.RowSpan="2"
                           Grid.Column="2"
                           WidthRequest="10"
                           HeightRequest="10"
                           Margin="0,30">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPickerClicked"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </StackLayout>
            <!--<zxing:ZXingBarcodeImageView WidthRequest="300" HeightRequest="100" BarcodeValue="1337" BarcodeFormat="CODE_39">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300" Height="100" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>-->
            <zxing:ZXingBarcodeImageView WidthRequest="300"
                                         HeightRequest="300"
                                         BarcodeValue="{Binding SelectedAddress.Address}"
                                         BarcodeFormat="QR_CODE">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300"
                                          Height="300" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>
            <Label Text="{Binding SelectedAddress.Address}"
                   TextColor="{DynamicResource AdditionalTextColor}"
                   FontFamily="{DynamicResource RegularFont}"
                   HorizontalTextAlignment="Center"
                   FontSize="24"/>
            <StackLayout Orientation="Horizontal" Padding="80,20">
                <StackLayout HorizontalOptions="CenterAndExpand"
                             WidthRequest="60">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCopyButtonClicked"/>
                    </StackLayout.GestureRecognizers>
                    <Image WidthRequest="40"
                           HeightRequest="40"
                           HorizontalOptions="Center"
                           VerticalOptions="End"
                           Source="Copy"/>
                    <Label Text="{x:Static resources:AppResources.CopyButton}"
                           FontFamily="{DynamicResource RegularFont}"
                           TextColor="{DynamicResource MainTextColor}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           VerticalOptions="Start" />
                </StackLayout>
                <StackLayout HorizontalOptions="CenterAndExpand"
                             WidthRequest="60">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnShareButtonClicked"/>
                    </StackLayout.GestureRecognizers>
                    <Image Grid.Column="0"
                           WidthRequest="40"
                           HeightRequest="40"
                           HorizontalOptions="Center"
                           VerticalOptions="End"
                           Source="Share"/>
                    <Label Text="{x:Static resources:AppResources.ShareButton}"
                           FontFamily="{DynamicResource RegularFont}"
                           TextColor="{DynamicResource MainTextColor}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           VerticalOptions="Start" />
                </StackLayout>
            </StackLayout>

            <!--<zxing:ZXingBarcodeImageView WidthRequest="300" HeightRequest="100" BarcodeValue="1337133713378" BarcodeFormat="EAN_13">
                <zxing:ZXingBarcodeImageView.BarcodeOptions>
                    <zxcm:EncodingOptions Width="300" Height="100" />
                </zxing:ZXingBarcodeImageView.BarcodeOptions>
            </zxing:ZXingBarcodeImageView>-->
        </StackLayout>
    </ScrollView>
</ContentPage>