<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:atomex.CustomElements"
             xmlns:resources="clr-namespace:atomex.Resources"
             x:Class="atomex.Views.CreateSwap.AmountPage"
             Title="{x:Static resources:AppResources.CreateSwapPageTitle}"
             BackgroundColor="{DynamicResource AdditionalBackgroundColor}">
    <ContentPage.Content>
        <StackLayout Padding="20,0">
            <Label Text="{x:Static resources:AppResources.EnterAmountLabel}"
                   HorizontalTextAlignment="Center"
                   Padding="20,30,20,10"
                   FontSize="22"
                   FontFamily="{DynamicResource BoldFont}"/>
            <Grid ColumnSpacing="0"
                  RowSpacing="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Frame Grid.ColumnSpan="2"
                       x:Name="AmountFrame"
                       Style="{DynamicResource EntryFrameStyle}">
                    <StackLayout Orientation="Horizontal"
                                 Grid.ColumnSpan="2">
                        <Frame Padding="0"
                               HasShadow="False"
                               HorizontalOptions="FillAndExpand"
                               Grid.Row="1">
                            <StackLayout>
                                <Label x:Name="AmountHint"
                                       Style="{DynamicResource EntryHintStyle}"/>
                                <custom:CustomEntry Keyboard="Numeric"
                                                    x:Name="Amount"
                                                    Placeholder="{x:Static resources:AppResources.AmountEntryPlaceholder}"
                                                    Style="{DynamicResource EntryStyle}"
                                                    Focused="AmountEntryFocused"
                                                    Unfocused="AmountEntryFocused"
                                                    TextChanged="OnAmountTextChanged"/>
                            </StackLayout>
                        </Frame>
                        <Button Grid.Column="1"
                                Grid.Row="1"
                                Text="{x:Static resources:AppResources.MaxButton}"
                                FontSize="16"
                                Padding="20"
                                TextColor="{DynamicResource HintTextColor}"
                                HorizontalOptions="Center"
                                BackgroundColor="White"
                                Clicked="OnSetMaxAmountButtonClicked"/>
                     </StackLayout>
                </Frame>
                <Frame Grid.Row="2"
                       Grid.ColumnSpan="2"
                       x:Name="InvalidAmountFrame"
                       HasShadow="False"
                       IsVisible="False">
                    <Label Text="{x:Static resources:AppResources.InvalidAmount}"
                           x:Name="InvalidAmountLabel"
                           TextColor="Red"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Start"/>
                </Frame>
            </Grid>
            <Label Margin="10,0"
                   VerticalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{x:Static resources:AppResources.AvailableMarketVolumeLabel}"
                                  FontFamily="{DynamicResource RegularFont}"
                                  TextColor="{DynamicResource MainTextColor}"/>
                            <Span Text=": "/>
                            <Span Text="{Binding EstimatedMaxAmount, StringFormat='{0:0.####}'}"
                                  FontFamily="{DynamicResource BoldFont}"
                                  FontSize="16"/>
                            <Span Text=" "/>
                            <Span Text="{Binding FromCurrencyViewModel.CurrencyCode}"
                                  FontFamily="{DynamicResource BoldFont}"
                                  FontSize="14"/>
                        </FormattedString>
                    </Label.FormattedText>
            </Label>
            <Grid Margin="0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="15" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Image Source="{Binding FromCurrencyViewModel.CurrencyCode}"/>
                <Image Source="ConvertArrow"
                       Grid.Column="1"
                       WidthRequest="40"
                       VerticalOptions="CenterAndExpand"/>
                <Image Grid.Column="2"
                       Source="{Binding ToCurrencyViewModel.CurrencyCode}"/>
                <Label Grid.Row="1"
                       FontFamily="{DynamicResource RegularFont}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding Amount, StringFormat='{0:0.########}'}"/>
                            <Span Text=" "/>
                            <Span Text="{Binding FromCurrencyViewModel.CurrencyCode}"
                                  FontSize="14"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Text="{x:Static resources:AppResources.NoLiquidityLabel}"
                       Grid.Row="1"
                       Grid.Column="2"
                       FontFamily="{DynamicResource RegularFont}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       TextColor="Red"
                       IsVisible="{Binding IsNoLiquidity}"/>
                <Label Grid.Row="1"
                       Grid.Column="2"
                       FontFamily="{DynamicResource RegularFont}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding IsNoLiquidity}"
                                     Value="True">
                            <Setter Property="IsVisible"
                                    Value="False"/>
                        </DataTrigger>
                    </Label.Triggers>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding TargetAmount, StringFormat='{0:0.########}'}"/>
                            <Span Text=" "/>
                            <Span Text="{Binding ToCurrencyViewModel.CurrencyCode}"
                                  FontSize="14"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Grid.Row="2"
                       Text="{Binding AmountInBase, StringFormat='{0:f2}'}"
                       FontSize="14"
                       FontFamily="{DynamicResource RegularFont}"
                       TextColor="{DynamicResource AdditionalTextColor}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Start"
                       Padding="0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding AmountInBase, StringFormat='{0:f2}'}"/>
                            <Span Text=" $"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Grid.Row="2"
                       Grid.Column="2"
                       Text="{Binding TargetAmountInBase, StringFormat='{0:f2}'}"
                       FontSize="14"
                       FontFamily="{DynamicResource RegularFont}"
                       TextColor="{DynamicResource AdditionalTextColor}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Start">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding TargetAmountInBase, StringFormat='{0:f2}'}"/>
                            <Span Text=" $"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>
            <Label HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{x:Static resources:AppResources.EstimatedPriceLabel}"
                              FontFamily="{DynamicResource RegularFont}"
                              TextColor="{DynamicResource MainTextColor}"/>
                        <Span Text=": "/>
                        <Span Text="{Binding EstimatedPrice}"
                              FontFamily="{DynamicResource BoldFont}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{x:Static resources:AppResources.EstimatedPaymentFeeLabel}"
                              FontFamily="{DynamicResource RegularFont}"
                              TextColor="{DynamicResource MainTextColor}"/>
                        <Span Text=": "/>
                        <Span Text="{Binding EstimatedPaymentFee}"
                              FontFamily="{DynamicResource BoldFont}"/>
                        <Span Text=" "/>
                        <Span Text="{Binding FromCurrencyViewModel.FeeCurrencyCode}"
                              FontFamily="{DynamicResource BoldFont}"
                              FontSize="14"/>
                        <Span Text="{Binding EstimatedPaymentFeeInBase, StringFormat=' ({0:0.##} $)'}"
                              FontSize="14"
                              TextColor="Gray"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{x:Static resources:AppResources.EstimatedRedeemFeeLabel}"
                              FontFamily="{DynamicResource RegularFont}"
                              TextColor="{DynamicResource MainTextColor}"/>
                        <Span Text=": "/>
                        <Span Text="{Binding EstimatedRedeemFee}"
                              FontFamily="{DynamicResource BoldFont}"/>
                        <Span Text=" "/>
                        <Span Text="{Binding ToCurrencyViewModel.FeeCurrencyCode}"
                              FontFamily="{DynamicResource BoldFont}"
                              FontSize="14"/>
                        <Span Text="{Binding EstimatedRedeemFeeInBase, StringFormat=' ({0:0.##} $)'}"
                              FontSize="14"
                              TextColor="Gray"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Text="{x:Static resources:AppResources.NextButton}"
                    Margin="20"
                    VerticalOptions="EndAndExpand"
                    Style="{DynamicResource MainButtonStyle}"
                    Clicked="OnNextButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
