<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:atomex.Resources"
             xmlns:custom="clr-namespace:atomex.CustomElements"
             x:Class="atomex.Views.CreateSwap.CurrenciesPage"
             Title="{x:Static resources:AppResources.CreateSwapPageTitle}"
             BackgroundColor="{DynamicResource AdditionalBackgroundColor}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{x:Static resources:AppResources.SelectCurrenciesLabel}"
                   HorizontalTextAlignment="Center"
                   Padding="20,30,20,10"
                   FontSize="22"
                   FontFamily="{DynamicResource BoldFont}"/>
            <Grid HorizontalOptions="Fill"
                  ColumnSpacing="0"
                  RowSpacing="0"
                  Margin="20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Frame Grid.RowSpan="2"
                       Padding="5"
                       Style="{DynamicResource FrameCaptionStyle}">
                    <Label Text="{x:Static resources:AppResources.FromLabel}"
                           Style="{DynamicResource LabelFrameCaptionStyle}"/>
                </Frame>
                <Frame Grid.RowSpan="2"
                       Grid.Column="1"
                       Grid.ColumnSpan="3"
                       HasShadow="False"
                       Padding="0"
                       x:Name="FromCurrencyFrame">
                    <custom:CustomPicker x:Name="pickerFrom"
                                         ItemsSource="{Binding FromCurrencies}"
                                         ItemDisplayBinding="{Binding Currency.Description}"
                                         SelectedItem="{Binding FromCurrencyViewModel}"
                                         VerticalOptions="FillAndExpand"
                                         HorizontalOptions="FillAndExpand"
                                         Focused="OnFromCurrencyPickerFocused"
                                         Unfocused="OnFromCurrencyPickerFocused"
                                         TextColor="#ffffff"/>
                </Frame>
                <Image Grid.Column="1"
                       Grid.RowSpan="2"
                       Source="{Binding FromCurrencyViewModel.CurrencyCode}"
                       Margin="12"
                       IsEnabled="False"/>
                <Label Grid.Column="2"
                       Text="{Binding FromCurrencyViewModel.Currency.Description}"
                       FontFamily="{DynamicResource RegularFont}"
                       FontSize="18"
                       VerticalTextAlignment="End"
                       IsEnabled="False"/>
                <Label Grid.Row="1"
                       Grid.Column="2"
                       HorizontalTextAlignment="Start"
                       VerticalTextAlignment="Start"
                       FontFamily="{DynamicResource ItalicFont}"
                       TextColor="{DynamicResource HintTextColor}"
                       FontSize="14"
                       IsEnabled="False">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{x:Static resources:AppResources.Balance}"/>
                            <Span Text=" "/>
                            <Span Text="{Binding FromCurrencyViewModel.AvailableAmount, StringFormat='{0:0.#######}'}"/>
                            <Span Text=" "/>
                            <Span Text="{Binding FromCurrencyViewModel.CurrencyCode}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Image Source="DownArrowPicker"
                       Grid.RowSpan="2"
                       Grid.Column="3"
                       Margin="0,30"
                       IsEnabled="False"/>
            </Grid>
            <Grid HorizontalOptions="Fill"
                  ColumnSpacing="0"
                  RowSpacing="0"
                  Margin="20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Frame Padding="5"
                       Style="{DynamicResource FrameCaptionStyle}">
                    <Label Text="{x:Static resources:AppResources.ToLabel}"
                           Style="{DynamicResource LabelFrameCaptionStyle}"/>
                </Frame>
                <Frame Grid.Column="1"
                       Grid.ColumnSpan="3"
                       HasShadow="False"
                       Padding="0"
                       x:Name="ToCurrencyFrame">
                    <custom:CustomPicker x:Name="pickerTo"
                                         ItemsSource="{Binding ToCurrencies}"
                                         ItemDisplayBinding="{Binding Currency.Description}"
                                         SelectedItem="{Binding ToCurrencyViewModel}"
                                         Focused="OnToCurrencyPickerFocused"
                                         Unfocused="OnToCurrencyPickerFocused"
                                         HorizontalOptions="FillAndExpand"
                                         TextColor="#ffffff"/>
                </Frame>
                <Image Grid.Column="1"
                       Source="{Binding ToCurrencyViewModel.CurrencyCode}"
                       Margin="12"
                       IsEnabled="False"/>
                <Label Grid.Column="2"
                       Text="{Binding ToCurrencyViewModel.Currency.Description}"
                       FontFamily="{DynamicResource RegularFont}"
                       FontSize="18"
                       VerticalTextAlignment="Center"
                       IsEnabled="False"/>
                <Image Source="DownArrowPicker"
                       Grid.Column="3"
                       Margin="0,30"
                       IsEnabled="False"/>
            </Grid>
            <Label Margin="20">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{x:Static resources:AppResources.EstimatedPriceLabel}"
                              FontFamily="{DynamicResource RegularFont}"/>
                        <Span Text=" "/>
                        <Span Text="{Binding EstimatedPrice}"
                              FontSize="18"
                              FontFamily="{DynamicResource BoldFont}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Text="{x:Static resources:AppResources.NextButton}"
                    Margin="20"
                    VerticalOptions="EndAndExpand"
                    Style="{DynamicResource MainButtonStyle}"
                    Clicked="OnNextButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
