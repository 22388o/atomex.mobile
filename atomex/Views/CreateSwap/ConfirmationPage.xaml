<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             x:Class="atomex.Views.CreateSwap.ConfirmationPage"
             Title="Create swap - confirmation"
             Icon="NavBar__conversion"
             BackgroundColor="{DynamicResource AdditionalBackgroundColor}">
    <ContentPage.Content>
        <RelativeLayout>
            <ActivityIndicator x:Name="SendingLoader"
                               RelativeLayout.XConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Width, Factor = .5}"
	             	           RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor =.5}"
                               Scale="3"
                               Color="Black"/>
            <StackLayout x:Name="Content"
                         VerticalOptions="FillAndExpand">
                <Grid Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <ffimageloadingsvg:SvgCachedImage Source="{Binding FromCurrencyViewModel.CurrencyCode, StringFormat='{0}.svg'}"/>
                    <ffimageloadingsvg:SvgCachedImage Source="Right-arrow-3.svg"
                                                      Grid.Column="1"
                                                      WidthRequest="40"
                                                      VerticalOptions="CenterAndExpand"/>
                    <ffimageloadingsvg:SvgCachedImage Grid.Column="2"
                                                      Source="{Binding ToCurrencyViewModel.CurrencyCode, StringFormat='{0}.svg'}"/>
                    <Label Grid.Row="1"
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Amount, StringFormat='{0:0.########}'}"
                                      FontFamily="{DynamicResource BoldFont}"/>
                                <Span Text=" "/>
                                <Span Text="{Binding FromCurrencyViewModel.CurrencyCode}"
                                      FontFamily="{DynamicResource BoldFont}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Grid.Row="1"
                           Grid.Column="2"
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding TargetAmount, StringFormat='{0:0.########}'}"
                                      FontFamily="{DynamicResource BoldFont}"/>
                                <Span Text=" "/>
                                <Span Text="{Binding ToCurrencyViewModel.CurrencyCode}"
                                      FontFamily="{DynamicResource BoldFont}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Grid.Row="2"
                           Text="{Binding AmountInBase, StringFormat='{0:f2}'}"
                           FontSize="12"
                           FontFamily="{DynamicResource RegularFont}"
                           TextColor="{DynamicResource AdditionalTextColor}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Start">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding AmountInBase, StringFormat='{0:f2}'}"/>
                                <Span Text=" $"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Grid.Row="2"
                           Grid.Column="2"
                           Text="{Binding TargetAmountInBase, StringFormat='{0:f2}'}"
                           FontSize="12"
                           FontFamily="{DynamicResource RegularFont}"
                           TextColor="{DynamicResource AdditionalTextColor}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Start">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding TargetAmountInBase, StringFormat='{0:f2}'}"/>
                                <Span Text=" $"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>
                <TableView Intent="Form"
                           RowHeight="70"
                           BackgroundColor="{DynamicResource AdditionalBackgroundColor}">
                    <TableRoot>
                        <TableSection Title="Confirm transaction"
                                      TextColor="{DynamicResource HintTextColor}">
                            <ViewCell>
                                <StackLayout Margin="20,0"
                                             VerticalOptions="Center">
                                    <Label Text="Estimated price"
                                           FontFamily="{DynamicResource RegularFont}"/>
                                    <Label Text="{Binding EstimatedPrice}"
                                           VerticalOptions="CenterAndExpand"
                                           TextColor="{DynamicResource HintTextColor}"
                                           FontFamily="{DynamicResource BoldFont}"/>
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
                                <StackLayout Margin="20,0"
                                             VerticalOptions="Center">
                                    <Label Text="Estimated payment fee"
                                           FontFamily="{DynamicResource RegularFont}"/>
                                    <Label VerticalOptions="CenterAndExpand"
                                           TextColor="{DynamicResource HintTextColor}"
                                           FontFamily="{DynamicResource BoldFont}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding EstimatedPaymentFee}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding FromCurrencyViewModel.CurrencyCode}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label> 
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
                                <StackLayout Margin="20,0"
                                             VerticalOptions="Center">
                                    <Label Text="Estimated redeem fee"
                                           FontFamily="{DynamicResource RegularFont}"/>
                                    <Label VerticalOptions="CenterAndExpand"
                                           TextColor="{DynamicResource HintTextColor}"
                                           FontFamily="{DynamicResource BoldFont}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding EstimatedRedeemFee}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding ToCurrencyViewModel.CurrencyCode}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                     </Label> 
                                </StackLayout>
                            </ViewCell>
                        </TableSection>
                    </TableRoot>
                </TableView>
            </StackLayout>
            <Button Text="CONVERT"
                    x:Name="ConvertButton"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Factor=0.8,Constant=0}"
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                    Margin="20"
                    Style="{DynamicResource MainButtonStyle}"
                    Clicked="OnConvertButtonClicked"/>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>