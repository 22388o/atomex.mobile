<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:atomex.CustomElements"
             x:Class="atomex.Views.CreateNewWallet.WalletNamePage"
             Title="Create new wallet"
             BackgroundColor="#dae4e5">
    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand">
        <Label Text="Step 2: Wallet name"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,20"/>
        <Label Text="Please enter a name for your wallet:"
               Padding="5"/>
        <Frame x:Name="Frame"
               Padding="0"
               HasShadow="False"
               CornerRadius="0"
               HorizontalOptions="FillAndExpand">
            <StackLayout HeightRequest="70">
                <Label x:Name="NameHint"
                       Padding="20,10,0,0"
                       FontSize="14"
                       VerticalTextAlignment="End"
                       TextColor="#296e6b"
                       IsVisible="False"/>
                <controls:CustomEntry x:Name="Entry"
                                      Placeholder="Wallet name"
                                      Keyboard="Text"
                                      Focused="EntryFocused"
                                      Unfocused="EntryFocused"
                                      IsSpellCheckEnabled="False"
                                      IsTextPredictionEnabled="False"
                                      HorizontalOptions="FillAndExpand"
                                      VerticalOptions="FillAndExpand"
                                      TextChanged="OnTextChanged"
                                      Text="{Binding WalletName}"/>
            </StackLayout>
        </Frame>
        <Label x:Name="Error"
               TextColor="Red"
               IsVisible="False"
               Margin="0,10"/>
        <Button Text="Next"
                Margin="0,20"
                TextColor="White"
                FontSize="18"
                HeightRequest="70"
                CornerRadius="0"
                BackgroundColor="#415f60"
                HorizontalOptions="Fill"
                Clicked="OnNextButtonClicked"/>
    </StackLayout> 
</ContentPage>
