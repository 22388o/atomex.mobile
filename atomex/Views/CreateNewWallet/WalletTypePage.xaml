<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.Views.CreateNewWallet.WalletTypePage"
             Title="Create new wallet"
             BackgroundColor="{DynamicResource MainBackgroundColor}">
    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand">
        <Label Text="Step 1: Wallet type"
               Style="{DynamicResource CreateNewWalletTitleStyle}"/>
        <Label Text="Please select your wallet type:"
               Style="{DynamicResource CreateNewWalletTextStyle}"/>
        <Frame Padding="0"
               HasShadow="False"
               x:Name="Frame">
            <Picker HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding Networks}"
                    SelectedItem="{Binding Network}"
                    HeightRequest="70"
                    Focused="OnPickerFocused"
                    Unfocused="OnPickerUnfocused"/>
        </Frame>
        <Button Text="Next"
                Margin="0,20"
                Style="{DynamicResource MainButtonStyle}"
                Clicked="OnNextButtonClicked"/>
    </StackLayout> 
   
</ContentPage>
