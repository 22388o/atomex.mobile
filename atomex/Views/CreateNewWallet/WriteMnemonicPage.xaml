<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.Views.CreateNewWallet.WriteMnemonicPage"
             Title="Create new wallet"
             BackgroundColor="{DynamicResource MainBackgroundColor}">
    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand"
                 Margin="20,0">
        <Label Text="Step 3: Mnemonic phrase"
               Style="{DynamicResource CreateNewWalletTitleStyle}"/>
        <Label Text="   Please, enter a mnemonic phrase for your wallet."
               Style="{DynamicResource CreateNewWalletTextStyle}"/>
        <StackLayout Orientation="Horizontal">
            <Frame Style="{DynamicResource FrameCaptionStyle}">
                <Label Text="Language:"
                       Style="{DynamicResource LabelFrameCaptionStyle}"/>
            </Frame>
                <Frame HasShadow="False"
                       x:Name="PickerFrame"
                       Padding="0"
                       BorderColor="LightGray"
                       HorizontalOptions="FillAndExpand">
                <Picker ItemsSource="{Binding Languages}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding Language}"
                        HeightRequest="70"
                        Focused="OnPickerFocused"
                        Unfocused="OnPickerFocused"/>
            </Frame>
        </StackLayout>
        <Frame HasShadow="False"
               x:Name="EditorFrame"
               Padding="0"
               BorderColor="LightGray">
            <Editor Placeholder="Enter mnemonic phrase here"
                    x:Name="Editor"
                    Text="{Binding Mnemonic}"
                    PlaceholderColor="{DynamicResource HintTextColor}"
                    Style="{DynamicResource EntryStyle}"
                    HeightRequest="70"
                    Focused="OnEditorFocused"
                    Unfocused="OnEditorFocused"/>
        </Frame>
        <Label x:Name="Error"
               TextColor="Red"
               IsVisible="False"
               Margin="0,10"/>
        <Button Text="Next"
                Margin="0,20"
                Style="{DynamicResource MainButtonStyle}"
                Clicked="OnNextButtonClicked"/>
    </StackLayout>
</ContentPage>
