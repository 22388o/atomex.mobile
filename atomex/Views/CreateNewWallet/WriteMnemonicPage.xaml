<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.Views.CreateNewWallet.WriteMnemonicPage"
             BackgroundColor="#F5F5F5">
    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand"
                 Margin="20,0">
        <Label Text="Step 3: Mnemonic phrase"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"/>
        <Label Text="   Please, enter a mnemonic phrase for your wallet."
               Margin="0,20,0,0"/>
        <Frame HasShadow="False"
               x:Name="PickerFrame"
               Padding="0"
               BorderColor="LightGray">
            <Picker HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding Languages}"
                    SelectedItem="{Binding Language}"
                    HeightRequest="70"
                    Focused="OnPickerFocused"
                    Unfocused="OnPickerFocused"/>
        </Frame>
        <Frame HasShadow="False"
               x:Name="EditorFrame"
               Padding="0"
               BorderColor="LightGray">
            <Editor Placeholder="Enter mnemonic phrase here"
                    x:Name="Editor"
                    Text="{Binding Mnemonic}"
                    PlaceholderColor="CadetBlue"
                    HeightRequest="70"
                    IsTextPredictionEnabled="False"
                    IsSpellCheckEnabled="False"
                    Focused="OnEditorFocused"
                    Unfocused="OnEditorFocused"/>
        </Frame>
        <Label x:Name="Error"
               TextColor="Red"
               IsVisible="False"
               Margin="0,10"/>
        <Button Text="Next"
                Margin="0,20"
                TextColor="White"
                FontSize="18"
                HeightRequest="70"
                CornerRadius="0"
                BackgroundColor="CadetBlue"
                HorizontalOptions="Fill"
                Clicked="OnNextButtonClicked"/>
    </StackLayout>
</ContentPage>
