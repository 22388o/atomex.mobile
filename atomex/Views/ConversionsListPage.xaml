<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.ConversionsListPage"
             Title="Conversions">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Swaps history"
                   TextColor="Gray"
                   Margin="0,20,0,10"
                   FontSize="20"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            <ListView ItemsSource="{Binding Swaps}"
                      ItemTapped="OnListViewItemTapped"
                      IsVisible="{Binding Swaps}"
                      HasUnevenRows="True"
                      Footer="">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="8"
                                  RowSpacing="0"
                                  ColumnSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4.5*" />
                                    <ColumnDefinition Width="2.5*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.ColumnSpan="3"
                                       Text="{Binding LocalTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                       Margin="10,0"
                                       FontSize="12"
                                       TextColor="Gray"
                                       VerticalTextAlignment="Start"/>                          
                                <StackLayout Grid.Row="1"
                                             Grid.RowSpan="2"
                                             Orientation="Horizontal"
                                             HorizontalOptions="Center">
                                    <Image Source="{Binding FromCurrencyCode}"
                                           HeightRequest="24"
                                           WidthRequest="24"/>
                                    <Image Source="RightArrow"
                                           WidthRequest="24"
                                           HeightRequest="24"/>
                                    <Image Source="{Binding ToCurrencyCode}"
                                           HeightRequest="24"
                                           WidthRequest="24"/>
                                </StackLayout>
                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding FromAmount}"
                                       TextColor="Red"
                                       HorizontalTextAlignment="Start"
                                       Margin="10,0">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="-"/>
                                            <Span Text="{Binding FromAmount,StringFormat='{0:0.########}'}"/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding FromCurrencyCode}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Row="2"
                                       Grid.Column="1"
                                       Text="{Binding ToAmount}"
                                       TextColor="Green"
                                       HorizontalTextAlignment="Start"
                                       Margin="10,0">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="+"/>
                                            <Span Text="{Binding ToAmount, StringFormat='{0:0.########}'}"/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding ToCurrencyCode}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Frame Grid.Column="2"
                                       Grid.RowSpan="3"
                                       CornerRadius="3"
                                       Padding="0"
                                       Margin="0,10"
                                       HasShadow="False">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding State}"
                                                     Value="Completed">
                                            <Setter Property="BackgroundColor"
                                                    Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding State}"
                                                     Value="In Progress">
                                            <Setter Property="BackgroundColor"
                                                    Value="MediumBlue"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding State}"
                                                     Value="Canceled">
                                            <Setter Property="BackgroundColor"
                                                    Value="SlateGray"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding State}"
                                                     Value="Refunded">
                                            <Setter Property="BackgroundColor"
                                                    Value="YellowGreen"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding State}"
                                                     Value="Unsettled">
                                            <Setter Property="BackgroundColor"
                                                    Value="IndianRed"/>
                                        </DataTrigger>
                                    </Frame.Triggers>
                                    <Label Margin="5"
                                           FontSize="14"
                                           TextColor="White"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center"
                                           BackgroundColor="Transparent" 
                                           Text="{Binding State}" />
                                </Frame>         
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Create a new swap"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="70"
                    BackgroundColor="CadetBlue"
                    CornerRadius="0"
                    HorizontalOptions="Fill"
                    VerticalOptions="EndAndExpand"
                    Clicked="OnCreateSwapButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
