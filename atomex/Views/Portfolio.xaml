<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="atomex.Portfolio"
             Title="Portfolio"
             Icon="NavBar__portfolio">
        <ContentPage.Content>
            <StackLayout>
                <local:ChartView x:Name="portfolioChart"
                                 HeightRequest="180"
                                 Margin="10,30,10,0"/>
                <Label x:Name="walletsBalance"
                       FontAttributes="Bold"
                       FontSize="22"
                       HorizontalTextAlignment="Center"
                       Margin="0,30,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding totalAmount}"></Span>
                            <Span Text=" $"></Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Text="Main wallet"
                       TextColor="Gray"
                       FontSize="14"
                       HorizontalTextAlignment="Center"/>
                <ListView x:Name="currenciesList"
                          HasUnevenRows="true"
                          Margin="0,20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="3.5*" />
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="3.5*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.RowSpan="2"
                                           Source="{Binding Name}"
                                           HeightRequest="38"
                                           WidthRequest="38"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding FullName}"
                                           FontAttributes="Bold"
                                           VerticalTextAlignment="End"/>
                                    <Label Grid.RowSpan="2"
                                           Grid.Column="2"
                                           Text="{Binding PortfolioPercent, StringFormat='{0:f1}'}"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center"
                                           FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding PortfolioPercent, StringFormat='{0:f1}'}" />
                                                <Span Text=" %" /> 
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Column="3"
                                           Text="{Binding Amount, StringFormat='{0:f2}'}"
                                           HorizontalOptions="End"
                                           VerticalTextAlignment="End"
                                           FontAttributes="Bold">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Amount, StringFormat='{0:f2}'}" />
                                                <Span Text=" " /> 
                                                <Span Text="{Binding Name}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding Price, StringFormat='{0:f1} $'}"
                                           VerticalOptions="Start"
                                           TextColor="Gray"
                                           FontSize="12"/>
                                    <Label Grid.Row="1"
                                           Grid.Column="3"
                                           Text="{Binding Cost, StringFormat='{0:f1} $'}"
                                           VerticalOptions="Start"
                                           HorizontalOptions="EndAndExpand"
                                           TextColor="Gray"
                                           FontSize="12"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>            
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>