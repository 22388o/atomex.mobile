<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             x:Class="atomex.Portfolio"
             Title="Portfolio"
             Icon="NavBar__portfolio">
        <ContentPage.Content>
            <StackLayout>
                <RelativeLayout HeightRequest="220"
                                Margin="0,10">
                    <local:ChartView x:Name="portfolioChart"
                                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"/>
                    <Label FontFamily="{DynamicResource BoldFont}"
                           FontSize="22"
                           RelativeLayout.XConstraint= "{ConstraintExpression Type=RelativeToView, ElementName=portfolioChart, Property=Width, Factor =.5, Constant=-45}"
	             	       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=portfolioChart, Property=Height, Factor =.5, Constant=-15}"
                           Text="{Binding TotalCost, StringFormat='{0:f1} $'}">
                    </Label>
                    <Label Text="Main wallet"
                           TextColor="Gray"
                           FontFamily="{DynamicResource LightFont}"
                           FontSize="14"
                           RelativeLayout.XConstraint= "{ConstraintExpression Type=RelativeToView, ElementName=portfolioChart, Property=Width, Factor =.5, Constant=-35}"
	             	       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=portfolioChart, Property=Height, Factor =.5, Constant=+10}"/>
                </RelativeLayout>
                <ListView ItemsSource="{Binding CurrencyViewModels}"
                          HasUnevenRows="True"
                          SeparatorVisibility="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="3.5*" />
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="3.5*" />
                                    </Grid.ColumnDefinitions>
                                    <ffimageloadingsvg:SvgCachedImage Grid.RowSpan="2"
                                                                      HeightRequest="38"
                                                                      WidthRequest="38"
                                                                      VerticalOptions="Center"
                                                                      HorizontalOptions="Center"
                                                                      Source="{Binding CurrencyCode, StringFormat='{0}.svg'}"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Currency.Description}"
                                           FontFamily="{DynamicResource RegularFont}"
                                           VerticalTextAlignment="End"/>
                                    <Label Grid.RowSpan="2"
                                           Grid.Column="2"
                                           FontFamily="{DynamicResource RegularFont}"
                                           Text="{Binding PortfolioPercent, StringFormat='{0:f1}'}"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center"
                                           FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding PortfolioPercent, StringFormat='{0:f1}'}" />
                                                <Span Text=" %" /> 
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Column="3"
                                           FontFamily="{DynamicResource RegularFont}"
                                           HorizontalOptions="End"
                                           VerticalTextAlignment="End">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding AvailableAmount, StringFormat='{0:0.####}'}" />
                                                <Span Text=" " /> 
                                                <Span Text="{Binding CurrencyCode}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding Price, StringFormat='{0:f2} $'}"
                                           VerticalOptions="Start"
                                           FontFamily="{DynamicResource LightFont}"
                                           TextColor="Gray"
                                           FontSize="12"/>
                                    <Label Grid.Row="1"
                                           Grid.Column="3"
                                           Text="{Binding Cost, StringFormat='{0:f2} $'}"
                                           FontFamily="{DynamicResource LightFont}"
                                           VerticalOptions="Start"
                                           HorizontalOptions="EndAndExpand"
                                           TextColor="Gray"
                                           FontSize="12"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>            
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>