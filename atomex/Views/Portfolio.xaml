<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:resources="clr-namespace:atomex.Resources"
             x:Class="atomex.Portfolio"
             Title="{x:Static resources:AppResources.PortfolioPageTitle}"
             BackgroundColor="{DynamicResource MainBackgroundColor}">
        <ContentPage.Content>
            <StackLayout>
                <RelativeLayout HeightRequest="220"
                                Margin="0,10">
                    <chart:ChartView x:Name="portfolioChart"
                                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"/>
                    <StackLayout RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToView, ElementName=portfolioChart, Property=Height, Factor=1}"
                                 RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToView, ElementName=portfolioChart, Property=Width, Factor=1}"
                                 VerticalOptions="Center"
                                 Spacing="0">
                        <Label FontFamily="{DynamicResource BoldFont}"
                               FontSize="22"
                               Text="{Binding TotalCost, StringFormat='{0:f1} $'}"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>
                        <Label Text="{x:Static resources:AppResources.MainWalletLabel}"
                               TextColor="Gray"
                               FontFamily="{DynamicResource LightFont}"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>
                    </StackLayout>
                </RelativeLayout>
                <ListView ItemsSource="{Binding CurrencyViewModels}"
                          HasUnevenRows="True"
                          SeparatorVisibility="None"
                          BackgroundColor="{DynamicResource MainBackgroundColor}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="3.5*" />
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="3.5*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.RowSpan="2"
                                           HeightRequest="38"
                                           WidthRequest="38"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Source="{Binding CurrencyCode}"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Currency.Description}"
                                           FontFamily="{DynamicResource RegularFont}"
                                           VerticalTextAlignment="End"/>
                                    <Label Grid.RowSpan="2"
                                           Grid.Column="2"
                                           FontFamily="{DynamicResource RegularFont}"
                                           Text="{Binding PortfolioPercent, StringFormat='{0:f1}'}"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center"
                                           FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding PortfolioPercent, StringFormat='{0:f1}'}" />
                                                <Span Text=" %" /> 
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Column="3"
                                           FontFamily="{DynamicResource RegularFont}"
                                           HorizontalOptions="End"
                                           VerticalTextAlignment="End">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding AvailableAmount, StringFormat='{0:0.####}'}" />
                                                <Span Text=" " /> 
                                                <Span Text="{Binding CurrencyCode}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding Price, StringFormat='{0:f2} $'}"
                                           VerticalOptions="Start"
                                           FontFamily="{DynamicResource LightFont}"
                                           TextColor="Gray"
                                           FontSize="12"/>
                                    <Label Grid.Row="1"
                                           Grid.Column="3"
                                           Text="{Binding AmountInBase, StringFormat='{0:f2} $'}"
                                           FontFamily="{DynamicResource LightFont}"
                                           VerticalOptions="Start"
                                           HorizontalOptions="EndAndExpand"
                                           TextColor="Gray"
                                           FontSize="12"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>            
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>