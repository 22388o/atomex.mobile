<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.MyWalletsPage"
             Title="My wallets"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="PLEASE SELECT YOUR WALLET"
                   TextColor="{DynamicResource MainTextColor}"
                   Padding="20,50"
                   FontSize="22"
                   HorizontalTextAlignment="Center"/>
            <Frame Style="{DynamicResource MainNetWalletFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWalletTapped"/>
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Horizontal">
                    <ImageButton Source="WalletIcon"
                                 CornerRadius="24"
                                 WidthRequest="48"
                                 HeightRequest="48"
                                 BorderColor="#2b4a4a"
                                 BackgroundColor="LightCyan"
                                 BorderWidth="2"
                                 Padding="10"/>
                    <Label Text="ATOMEX"
                           Style="{DynamicResource MainNetWalletlButtonTextStyle}"/>
                    <Image Source="RightArrowIcon"/>
                </StackLayout>
            </Frame>
            <Frame Style="{DynamicResource TestNetWalletFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWalletTapped"/>
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Horizontal">
                    <ImageButton Source="WalletIcon"
                                 CornerRadius="24"
                                 WidthRequest="48"
                                 HeightRequest="48"
                                 BackgroundColor="#BDA592"
                                 BorderColor="#A66731"
                                 BorderWidth="2"   
                                 Padding="10"/>
                    <Label Text="STARIK"
                           Style="{DynamicResource TestNetWalletlButtonTextStyle}"/>
                    <Image Source="RightArrowIcon"/>
                </StackLayout>
            </Frame>
            <!--<ListView ItemsSource="{Binding Wallets}"
                      Footer="">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="20,10"
                               CornerRadius="10">
                            <Button Text="Wallet name"
                                    TextColor="CadetBlue"
                                    FontSize="16"
                                    Clicked="OnWalletClicked"/>
                        </Frame>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
