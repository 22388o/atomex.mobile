<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atomex.MyWalletsPage"
             Title="My wallets"
             BackgroundColor="#ebedec">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="SELECT A WALLET"
                   TextColor="Black"
                   Margin="0,30,0,10"
                   FontSize="22"
                   HorizontalTextAlignment="Center"/>
            <Frame CornerRadius="3"
                   HasShadow="False"
                   HeightRequest="50">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWalletTapped"/>
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="FillAndExpand">
                    <ImageButton Source="WalletIcon"
                                 CornerRadius="24"
                                 WidthRequest="48"
                                 HeightRequest="48"
                                 BorderColor="CadetBlue"
                                 BackgroundColor="LightCyan"
                                 BorderWidth="2"
                                 Padding="10"/>
                    <Label Text="Atomex"
                           TextColor="Black"
                           VerticalTextAlignment="Center"
                           HorizontalOptions="FillAndExpand"
                           HorizontalTextAlignment="Start"
                           Padding="10,0"
                           FontSize="18"/>
                    <Image Source="RightArrowIcon"/>
                </StackLayout>
            </Frame>
            <Frame CornerRadius="3"
                   HasShadow="False"
                   HeightRequest="50">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWalletTapped"/>
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="FillAndExpand">
                    <ImageButton Source="WalletIcon"
                                 CornerRadius="24"
                                 WidthRequest="48"
                                 HeightRequest="48"
                                 
                                 BorderColor="#cd726f"
                        BorderWidth="2"
                                 
                                 
                                 Padding="10"/>
                    <Label Text="Starik 4mo"
                           TextColor="Black"
                           VerticalTextAlignment="Center"
                           HorizontalOptions="FillAndExpand"
                           HorizontalTextAlignment="Start"
                           Padding="10,0"
                           FontSize="18"/>
                    <Image Source="RightArrowIcon"/>
                </StackLayout>
            </Frame>
            <!--<ListView ItemsSource="{Binding Wallets}"
                      Footer="">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="20,10"
                               CornerRadius="10">
                            <Button Text="Wallet name"
                                    TextColor="CadetBlue"
                                    FontSize="16"
                                    Clicked="OnWalletClicked"/>
                        </Frame>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
